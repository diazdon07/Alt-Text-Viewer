{
    "name" : "Alt Text Viewer",
    "description" : "Extension used to view Alt Text on image and svg tags.",
    "version" : "0.0.0.3",
    "manifest_version" : 3,
    "icons": {
        "16": "assets/16.png",
        "32": "assets/32.png",
        "48": "assets/48.png",
        "64": "assets/64.png",
        "128": "assets/128.png"
    },
    "action": {
        "default_title": "Alt Text Viewer" 
    },
    "permissions": [
        "commands",
        "storage"
    ],
    "background": {
        "service_worker": "service_worker.js"
    },
    "commands": {
        "show-alt-text": {
            "suggested_key": {
                "default": "Alt+S",
                "mac": "MacCtrl+S"
            },
            "description": "Show Alt Text"
        }
    },
    "content_scripts" : [
        {
            "matches" : [
                "<all_urls>"
            ],
            "js" : [
                "/scripts/content_scripts.js"
            ],
            "run_at" : "document_idle"
        }
    ]
}
